<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/calculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.849"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.487"
            tools:text="3+4" />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.863"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculo"
            app:layout_constraintVertical_bias="0.666"
            tools:text="7"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculo"
            app:layout_constraintVertical_bias="0.966" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_weight="1">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ce"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="CE"
                android:textColor="@color/color_button_CE"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/abre_parentese"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="("
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fecha_parentese"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text=")"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_two"
                android:text="รท"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </TableRow>
        <TableRow
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sete"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="7"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oito"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="8"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplicacao"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_two"
                android:text="x"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="18sp"/>

        </TableRow>
        <TableRow
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/quatro"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="4"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cinco"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="5"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seis"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="6"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/subtracao"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_two"
                android:text="-"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="40sp"/>

        </TableRow>
        <TableRow
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/um"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="1"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dois"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="2"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tres"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="3"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/soma"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_two"
                android:text="+"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="25sp"/>

        </TableRow>
        <TableRow
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ponto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:text="0"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/backspace"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:src="@drawable/backspace_white"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/igual"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_tree"
                android:text="="
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:textSize="30sp"/>

        </TableRow>



    </TableLayout>

</LinearLayout>